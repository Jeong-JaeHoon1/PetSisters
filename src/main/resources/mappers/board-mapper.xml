	<!-- 일반게시글 리스트 조회 -->
	<select id="selectFreeList" resultMap="boardResultSet">
		SELECT B.B_NO
		     , B.B_TITLE
		     , B.USER_NO
		     , B.COUNT 
			 , TO_CHAR(B.CREATE_DATE, 'YYYY-MM-DD') AS "CREATE_DATE"
			 , A.ORIGIN_NAME
		 FROM BOARD B
         LEFT JOIN B_ATTACHMENT A ON (B.B_NO = A.REF_BNO) 	
        WHERE B.STATUS = 'Y'
		  AND CATEGORY_MAIN = '1'
        ORDER BY B.B_NO DESC
        		
	</select>	

